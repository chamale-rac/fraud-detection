{
  "compilerOptions": {
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "noEmitOnError": false,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@Fragments": ["src/Fragments"],
      "@Components": ["src/Components"],
      "@Pages": ["src/Pages"],
      "@Config/*": ["src/Config/*"],
      "@Api": ["src/Api"],
      "@Stores": ["src/Stores"],
      "@Utils": ["src/Utils"],
      "@/*": ["src/@/*"]
    },
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
